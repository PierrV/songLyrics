{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <input  id="username" name="_username"  class="form-control" placeholder="Your Username *"  type="text" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>
    <div class="input-group form-group">
        <input id="password" name="_password"  class="form-control"  placeholder="Your Password *" type="password"  required="required" autocomplete="current-password" />
    </div>

    <div class="form-group">
        <input id="_submit" name="_submit" class="btnSubmit" type="submit" value="{{ 'security.login.submit'|trans }}" />
    </div>

    <div class="form-group">
        <a href="{{ path("fos_user_resetting_request") }}" class="btnForgetPwd" value="password_forget">Forget Password?</a>
    </div>

    <div class="form-group">
        <a href="{{ path("fos_user_registration_register") }}" class="btnForgetPwd" value="register">Register</a>
    </div>
</form>